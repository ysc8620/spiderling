<?xml version="1.0" encoding="utf-8"?>
<root>
  <site siteName="ffdy" readMode="normal" url="http://www.tingchina.com/" daily="0.3" charset="utf-8">
      <linkRules>
          <rule type="reg" value="(yousheng)" />
      </linkRules>
      <targets>
          <target name="info">
              <urlRules>
                  <rule type="reg" value=".*/yousheng/disp_(\d+).htm" />
              </urlRules>
              <model dataType="array">
					<field name="title">
						<parsers>
							<parser type="text" xpath="//div[@class='book01 padding10']/ul/li/span[@class='red12']/strong/text()" />
						</parsers>
					</field>
                  <field name="boyin">
                      <parsers>
                          <parser type="array" xpath="//div[@class='book01 padding10']/ul/li[text()='播音：']/a/text()" code="u" />
                      </parsers>
                  </field>
                  <field name="zuozhe">
                      <parsers>
                          <parser type="array" xpath="//div[@class='book01 padding10']/ul/li[text()='作者：']/a/text()" code="u" />
                      </parsers>
                  </field>
                  <field name="status">
                      <parsers>
                          <parser type="text" xpath="//div[@class='book01 padding10']/ul/li[text()='状态：']/span/text()" code="u" />
                      </parsers>
                  </field>
                  <field name="update">
                      <parsers>
                          <parser type="text" xpath="//div[@class='book01 padding10']/ul/li[text()='更新：']/span/text()" code="u" />
                      </parsers>
                  </field>
              </model>
          </target>
      </targets>
  </site>
</root>